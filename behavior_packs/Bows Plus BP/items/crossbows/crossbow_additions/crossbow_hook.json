{
	"format_version": "1.16.100",
	"minecraft:item": {
		"description": {
			"identifier": "pan:crossbow_hook",
			"category": "equipment"
		},
		"components": {
			"minecraft:creative_category": {
				"parent": "itemGroup.name.equipment"
			},
			"minecraft:max_stack_size": 1,
			"minecraft:use_duration": 0.1,
			"minecraft:icon": {
				"texture": "crossbow_hook"
			},
			"minecraft:display_name": {
				"value": "Hooked Crossbow\n§7Grapple around§f"
			},
			"minecraft:on_use": {
				"on_use": {
					"event": "pan:shoot",
					"target": "self",
					"condition": "query.scoreboard('pan:arow_chek')==1"
				}
			},
			"minecraft:hand_equipped": true,
			"minecraft:use_animation": "crossbow",
			"minecraft:enchantable": {
				"slot": "flintsteel",
				"value": 10
			},
			"minecraft:durability": {
				"max_durability": 464
			},
			"minecraft:cooldown": {
				"category": "crossbow_hook",
				"duration": 5
			},
			"minecraft:repairable": {
				"repair_items": [
					{
						"items": [
							"minecraft:iron_ingot"
						],
						"repair_amount": 50
					}
				]
			},
			"minecraft:weapon": {
				"on_hurt_entity": {
					"event": "pan:durability",
					"target": "self"
				},
				"on_not_hurt_entity": {
					"event": "pan:durability",
					"target": "self"
				},
				"on_hit_block": {
					"event": "pan:durability",
					"target": "self"
				}
			}
		},
		"events": {
			"pan:shoot": {
				"sequence": [
					{
						"shoot": {
							"projectile": "pan:hook",
							"launch_power": 2
						},
						"run_command": {
							"command": [
								"playanimation @s animation.player.crossbow_hold p 1",
								"playsound pan.hook @a[r=15] ~ ~ ~",
								"effect @s slow_falling 2 0 true",
								"clear @s[m=!c] arrow 0 1"
							]
						},
						"damage": {
							"type": "durability",
							"amount": 1,
							"target": "self"
						}
					}
				]
			},
			"pan:durability": {
				"damage": {
					"type": "durability",
					"amount": 0,
					"target": "self"
				}
			}
		}
	}
